{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "outDir": "dist",                         
    "rootDir": "src",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,                     
    "sourceMap": true                        
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
